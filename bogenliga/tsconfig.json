{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "paths": {
      "@shared/*": ["src/app/modules/shared/*"],
      "@environment": ["src/environments/environment"],
      "@home/*": ["src/app/modules/home/*"],
      "@settings/*": ["src/app/modules/settings/*"],
      "@sportjahresplan/*": ["src/app/modules/sportjahresplan/*"],
      "@user/*": ["src/app/modules/user/*"],
      "@verwaltung/*": ["src/app/modules/verwaltung/*"],
      "@wettkampf/*": ["src/app/modules/wettkampf/*"],
      "@vereine/*": ["src/app/modules/vereine/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
